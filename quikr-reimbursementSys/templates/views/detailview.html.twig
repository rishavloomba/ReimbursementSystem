          {{ message }}
     </div>
 {% endfor %}
 

  <!-- header -->

<header>
    <!-- Navbar -->
    {{ include('inc/navbar.html.twig') }}
</header> 



<div class="container" >

  <a style="color: black; font-size: em; margin-top:10px"  href="/finance"><i class="fas fa-arrow-left"></i></a>

  <div id="heading" >
       <h3>Detail View</h3><br><br>
   </div>
   




<!-- ============

